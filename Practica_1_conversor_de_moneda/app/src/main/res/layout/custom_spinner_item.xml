<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp">

    <ImageView
        android:id="@+id/moodImage"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:contentDescription="colombian_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/colombia_flag" />

    <TextView
        android:id="@+id/moodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/peso_colombiano"
        android:textColor="@color/green1"
        app:layout_constraintBottom_toBottomOf="@id/moodImage"
        app:layout_constraintStart_toEndOf="@id/moodImage"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>