<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/Main_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/resistencia_descripcion"
            app:srcCompat="@drawable/resistencia" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/banda1_spinner"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginBottom="9dp"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/banda2_spinner"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginBottom="9dp"
                android:visibility="visible" />
            <Spinner
                android:id="@+id/multiplicador_spinner"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginBottom="9dp"
                android:visibility="visible" />
            <Spinner
                android:id="@+id/tolerancia_spinner"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginBottom="9dp"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/calcular_button"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/calcular_string"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/resultadomsg"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/resultado_string"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>